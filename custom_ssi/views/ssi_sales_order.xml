<odoo>
    <data>
        <record id="ssi_sale_order_form" model="ir.ui.view">
        <field name="name">ssi.sale_order_form</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
              <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='product_uom_qty']" position="after">
                <field name="product_status" attrs="{}" string="Prod Status" options="{&quot;always_reload&quot;: True}"/>
              </xpath>
            </field>
        </record>

    </data>
</odoo>
