<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">website.advanced.wishlist</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='product_availability_setting']" position="after" >
                    <div class="col-12 col-6 o_setting_box">
                        <div class="o_setting_right_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="" string="Website Advanced Wishlist"/>
                            <div class="text-muted">
                                Wishlist action on product listing page :
                            </div>
                            <div class="mt8">
                                <field name="action" class="o_light_label"  widget="radio" required="True"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>